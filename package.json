{
	"name": "preferans-deck-js",
	"version": "2.5.7",
	"description": "nodejs deck of cards for preferans",
	"engines": {
		"node": ">=16.0.0"
	},
	"main": "./lib/prefDeck.js",
	"types": "./lib/prefDeck.d.ts",
	"scripts": {
		"all": "pnpm install & tsc & pnpm lint:fix & pnpm build & pnpm test & pnpm docs",
		"build": "del /S /Q lib\\* && tsc",
		"build:watch": "tsc --watch",
		"lint": "eslint src/**/*.ts test/**/*.ts",
		"lint:fix": "eslint src/**/*.ts test/**/*.ts --fix",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"docs": "typedoc --readme none --out docs src",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls",
		"sonar": "sonarjs -e .sonarlint/**,node_modules/**,coverage/**,.nyc_output/**",
		"fix": "pnpm i & pnpm dedupe & pnpm audit --fix & pnpm skeletest -f & pnpm strictr -f & pnpm format & git add test",
		"up": "pnpm up -i",
		"latest": "pnpm up -i -L",
		"l": "pnpm i & pnpm latest"
	},
	"files": [
		"lib/**/*"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/cope/preferans-deck-js.git"
	},
	"keywords": [
		"deck",
		"preferans",
		"cards"
	],
	"author": "Predrag Stojadinovic",
	"license": "Unlicense",
	"bugs": {
		"url": "https://github.com/cope/preferans-deck-js/issues"
	},
	"homepage": "https://github.com/cope/preferans-deck-js#readme",
	"dependencies": {
		"@types/lodash": "^4.14.181",
		"lodash": "^4.17.15"
	},
	"devDependencies": {
		"@eslint/js": "^9.32.0",
		"@types/jest": "^30.0.0",
		"@typescript-eslint/eslint-plugin": "^8.38.0",
		"@typescript-eslint/parser": "^8.38.0",
		"coveralls": "^3.1.1",
		"eslint": "^9.32.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.3",
		"jest": "^30.0.5",
		"prettier": "^3.6.2",
		"sonarjs": "^1.0.0",
		"source-map-support": "^0.5.21",
		"ts-jest": "^29.4.0",
		"ts-node": "^10.7.0",
		"typedoc": "^0.28.9",
		"typescript": "^5.9.2"
	},
	"packageManager": "pnpm@10.14.0"
}
